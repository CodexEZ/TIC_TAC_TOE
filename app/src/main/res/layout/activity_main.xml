<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353333">

    <ImageView

        android:id="@+id/layout"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/tic_tac_toe_layout" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@id/layout"
        android:layout_alignBottom="@id/layout"
        android:layout_marginStart="31dp"
        android:id="@+id/bottom_left"
        android:layout_marginBottom="28dp" />

    <ImageView
        android:id="@+id/bottom_middle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/layout"
        android:layout_marginStart="28.7dp"
        android:layout_marginBottom="28dp"
        android:layout_toEndOf="@+id/bottom_left" />

    <ImageView
        android:id="@+id/bottom_right"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/layout"
        android:layout_alignBottom="@id/layout"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="28dp" />

    <ImageView
        android:id="@+id/middle_left"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/bottom_left"
        android:layout_alignStart="@id/layout"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="31dp" />

    <ImageView
        android:id="@+id/middle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/bottom_left"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="31dp"
        android:layout_toEndOf="@+id/middle_left" />

    <ImageView
        android:id="@+id/middle_right"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/bottom_left"
        android:layout_alignEnd="@+id/layout"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="31dp"
        android:layout_toEndOf="@+id/middle" />

    <ImageView
        android:id="@+id/top_left"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/middle_left"
        android:layout_alignStart="@id/layout"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="31dp" />

    <ImageView
        android:id="@+id/top_middle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/middle_left"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="31dp"
        android:layout_toEndOf="@+id/top_left"
        />

    <ImageView
        android:id="@+id/top_right"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/middle_right"
        android:layout_alignEnd="@+id/layout"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="31dp"
        android:layout_toEndOf="@+id/middle" />

    <Button
        android:id="@+id/reset"
        android:background="@drawable/border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#4A4A4A"
        android:text="Reset" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="216dp"
        android:src="@drawable/win_slash"
        android:id="@+id/win_slash_bottom"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:src="@drawable/win_slash"
        android:id="@+id/win_slash_middle"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/win_slash"
        android:id="@+id/win_slash_top" />

    <ImageView
        android:id="@+id/win_slash_topdown_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/layout"
        android:layout_centerVertical="true"
        android:layout_marginStart="-90dp"
        android:rotation="90"
        android:src="@drawable/win_slash" />
    <ImageView
        android:id="@+id/win_slash_topdown_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/layout"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:rotation="90"
        android:src="@drawable/win_slash" />
    <ImageView
        android:id="@+id/win_slash_topdown_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/layout"
        android:layout_marginEnd="-90dp"
        android:layout_centerVertical="true"
        android:rotation="90"
        android:src="@drawable/win_slash" />
    <ImageView
        android:id="@+id/win_slash_diagonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/layout"
        android:layout_centerVertical="true"
        android:layout_marginStart="-50dp"
        android:rotation="45"
        android:src="@drawable/win_slash_large" />
    <ImageView
        android:id="@+id/win_slash_diagonal_reverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/layout"
        android:layout_centerVertical="true"
        android:layout_marginStart="-50dp"
        android:rotation="-45"
        android:src="@drawable/win_slash_large" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto_bold"
        android:text="TIC TAC TOE"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>